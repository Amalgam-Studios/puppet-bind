
// Zone fragment for <%= realzone %>
<%- if @forwarders -%>
zone "<%= realzone %>" IN {
  type <%= mode %>;
  forwarders { <%= forwarders %>; };
};
<%- else -%>
zone "<%= realzone %>" IN {
    type <%= mode %>;
    file "<%= scope.lookupvar('bind::params::zone_dir') %><% if @view %>/<%= @view %><% end %>/db.<%= realzone %>";
  <% if mode == 'slave' -%>
    masters { <%= masters %>; };
  <% end -%>
  <%- if @allow_update -%>
    allow-update { key <%= allow_update %>; };
  <%- end %>
};
<%- end -%>

