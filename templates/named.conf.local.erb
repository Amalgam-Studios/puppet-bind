include "/etc/bind/dynamic-dns.key";

zone "<%= dynamic_dns_forward_zone %>" IN {
    type master;
    file "/etc/bind/db.<%= dynamic_dns_forward_zone %>";
    allow-update { key DYNAMICDNS; };
};

zone "<%= dynamic_dns_reverse_zone %>.IN-ADDR.ARPA" IN {
    type master;
    file "/etc/bind/db.<%= dynamic_dns_reverse_zone %>";
    allow-update { key DYNAMICDNS; };
};
